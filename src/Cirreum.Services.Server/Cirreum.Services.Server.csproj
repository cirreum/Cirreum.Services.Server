		<PackageTags>cirreum;infrastructure;services;server</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>		
		<PackageReference Include="Polly" Version="8.6.5" />
